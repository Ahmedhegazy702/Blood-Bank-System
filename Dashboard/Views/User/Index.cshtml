@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>

<hr />
@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(u=>u.UserName)</th>
                    <th>@Html.DisplayNameFor(u=>u.DisplayName)</th>
                    <th>@Html.DisplayNameFor(u=>u.Email)</th>
                    <th>@Html.DisplayNameFor(u=>u.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(u=>u.BloodType)</th>

                   

                    <th>Roles</th>
                    <th>Actions</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.DisplayName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.BloodType</td>
                        <td>@string.Join(",", user.Roles.ToList())</td>
                        <td>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@user.Id">
                                <i class="fas fa-pen"></i>
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}

else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no Records</h2>
    </div>
}

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
                        }

